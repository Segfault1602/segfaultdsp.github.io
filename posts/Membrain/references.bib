@article{sullivan_noisebox_2015,
  title    = {Noisebox: Design and Prototype of a New Digital Musical Instrument},
  abstract = {This paper documents the initial prototyping of a new digital musical instrument. Speciﬁcally, it focuses on design of the interface, and contextualizes the project through some of the existing research in the ﬁeld of gestural control of new musical instruments. The project began with a concept for a standalone hand-held polyphonic synthesizer called the Noisebox (Figure 1). Several key concepts and strategies were explored and implemented during its development, including: analysis and application of gesture in musical performance, choice of sensors and sensor conditioning, appropriate mapping strategies, and evaluation of user experience. The outcome yielded a functional prototype that fulﬁlled the initial goal of the project to design and build a working instrument from start to ﬁnish. The stage documented here represents the ﬁrst phase of a longer project. Future phases will conduct user tests to measure the success of the instrument based on performer feedback and reﬁne the design through multiple iterations, leading to a ﬁnished instrument.},
  author   = {Sullivan, John},
  date     = {2015},
  langid   = {english},
