  date       = {2002-06},
  keywords   = {Acoustic waves, Amplitude estimation, Digital signal processors, Displays, Frequency estimation, Glass, Signal processing, Signal resolution, Timing, Windows},
  file       = {Full Text PDF:/Users/alex/Zotero/storage/WY8N4NFM/Paradiso et al. - 2002 - Passive acoustic sensing for tracking knocks atop large interactive displays.pdf:application/pdf;IEEE Xplore Abstract Record:/Users/alex/Zotero/storage/UTGVCDCH/1037150.html:text/html}
